if which apt-get &>/dev/null; then
  alias ai="apt-get install"
  alias aiy="apt-get install -y"
  alias au="apt-get update"
  alias sai="sudo apt-get install"
  alias saiy="sudo apt-get install -y"
  alias sau="sudo apt-get update"
  alias sauy="sudo apt-get update -y"
  alias acs="apt-cache search"
  alias ali="apt list --installed"
fi

if which yum &>/dev/null; then
  alias yif="yum info"
  alias yi="yum install"
  alias yiy="yum install -y"
  alias syiy="sudo yum install -y"
  alias epel="sudo amazon-linux-extras install epel -y"
  alias ys="yum search"
  alias yu="yum update"
  alias yuy="yum update -y"
  alias syu="sudo yum update"
  alias syuy="sudo yum update -y"
  alias yl="yum list"
  alias yli="yum list installed"
fi

if which apk &>/dev/null; then
  alias aa="apk add"
  alias aay="apk add -y"
  alias au="apk update"
fi

if which snap &>/dev/null; then
    alias si="snap install"
    alias ssi="sudo snap install"
    alias ssiy="sudo snap install -y"
fi

export VCPKG_ROOT="$c/vcpkg"
if [ ! -d "$VCPKG_ROOT" ]; then
  unset VCPKG_ROOT
fi

mkswap() {
    if [ $# -eq 0 ] || [ $# -gt 2 ]; then
        echo "Usage: mkswap <size> [dst=/swapfile]"
        return 1
    fi

    cur="$(sudo swapon --show)"
    if [ -n "$cur" ]; then
        echo "Swap already exists:" >&2
        echo "$cur" >&2
        return 1
    fi

    size="$1"; shift
    if [ $# -gt 0 ]; then
        dst="$1"; shift
    else
        dst="/swapfile"
    fi
    sudo fallocate -l "$size" "$dst"
    sudo chmod 600 "$dst"
    sudo mkswap "$dst"
    sudo swapon "$dst"
    sudo swapon --show
    echo "$dst swap swap defaults 0 0" | sudo tee -a /etc/fstab
}
